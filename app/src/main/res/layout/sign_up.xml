<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">


    <ImageView
        android:id="@+id/instgram_word"
        android:layout_width="265dp"
        android:layout_height="91dp"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to see photos and\nVideos from your friends."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#979797"
        app:layout_constraintBottom_toTopOf="@+id/signup_btnlogin"
        app:layout_constraintEnd_toEndOf="@+id/signup_btnlogin"
        app:layout_constraintStart_toStartOf="@+id/signup_btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/instgram_word"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/signup_btnlogin"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="19dp"
        android:textStyle="bold"
        app:backgroundTint="#3195f4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instgram_word"
        app:layout_constraintVertical_bias="0.142" />

    <View

        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/orText"
        android:background="#c0c0c0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/signup_btnlogin"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnlogin"
        app:layout_constraintVertical_bias="0.05" />

    <View
        android:id="@+id/view3"
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/orText"
        android:background="#c0c0c0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signup_btnlogin"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toEndOf="@+id/orText"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnlogin"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textColor="#979797"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnlogin"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/sighup_phoneOrEmail"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@drawable/border_rec"
        android:hint="Mobile Number or Email"
        android:paddingStart="15dp"
        android:textSize="20dp"
        android:textColor="#979797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnlogin"
        app:layout_constraintVertical_bias="0.101" />

    <EditText
        android:id="@+id/SignUp_FullName"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:background="@drawable/border_rec"
        android:hint="Full Name"
        android:paddingStart="15dp"
        android:textColor="#979797"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sighup_phoneOrEmail"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/SignUp_userName"
        android:layout_width="321dp"
        android:layout_height="44dp"
        android:background="@drawable/border_rec"
        android:hint="Username"
        android:paddingStart="15dp"
        android:textSize="20dp"
        android:textColor="#979797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_FullName"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/SignUp_password"
        android:layout_width="321dp"
        android:layout_height="46dp"
        android:background="@drawable/border_rec"
        android:hint="Password"
        android:paddingStart="15dp"
        android:textColor="#979797"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_userName"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/signup_btnSignup"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="19dp"
        app:backgroundTint="#3195f4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_password"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#979797"
        android:text="By signing up, you agree to our"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="@+id/signup_btnSignup"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/signup_btnSignup"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnSignup" />

    <TextView
        android:id="@+id/signup_privacypollicy"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:text="Terms &amp; Privacy Policy"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#979797"
        app:layout_constraintEnd_toEndOf="@+id/signup_btnSignup"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/signup_btnSignup"
        app:layout_constraintTop_toBottomOf="@+id/signup_btnSignup" />
</androidx.constraintlayout.widget.ConstraintLayout>